# Politburo Application Configuration
# Copy this to politburo.env and fill in actual production values
# IMPORTANT: Change all CHANGE_ME values to strong, unique passwords/secrets

# Application Configuration
APP_ENV=production
DEBUG=false
PORT=8080

# PostgreSQL Configuration (using service name in Docker network)
PG_HOST=db
PG_PORT=5432
PG_USER=ieuser
PG_DB=infinite
PG_PASSWORD=CHANGE_ME
# Note: DATABASE_URL not needed - app constructs DSN from PG_* vars

# Redis Configuration (using service name in Docker network)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME
USE_REDIS_CACHE=true

# Infinite Flight API Configuration
IF_API_BASE_URL=https://api.infiniteflight.com/public/v2
IF_API_KEY=CHANGE_ME

# Security Configuration
# GOD_MODE: Discord user ID with admin privileges
GOD_MODE=CHANGE_ME
# JWT_SECRET: Generate a strong random secret (e.g., openssl rand -base64 32)
JWT_SECRET=CHANGE_ME
